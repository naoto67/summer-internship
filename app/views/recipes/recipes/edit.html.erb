<div class="edit-recipe-form form">
  <%= form_with model: @recipe do |form| %>
    <div class="form-group">
      <%= form.label :title, "タイトル" %>
      <%= form.text_field :title, class: "form-control", placeholder: "例) オクラの胡麻和え" %>
    </div>
    <div class="form-group">
      <%= form.label :description, "キャッチコピー" %>
      <%= form.text_area :description, class: "form-control", placeholder: "例) とっても美味しい", rows: 4 %>
    </div>
    <div class="form-group">
      <%= form.label :image_url, "画像URL" %>
      <%= form.text_field :image_url, class: "form-control", placeholder: "https://img.com" %>
    </div>
    <div class="button-area">
      <div class="flex-button">
        <%= form.submit "更新", class: "btn btn-primary" %>
      </div>
      <div class="flex-button">
        <button class="btn btn-secondary" id="unpublish">非公開</button>
      </div>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  $('#unpublish').on('click', function(e) {
    e.preventDefault();
    $.ajax({
      url : '<%== "/recipes/#{@recipe.id}" %>',
      type : 'PATCH',
      data : {recipe: {status: "draft"}},
    })
  })
</script>
