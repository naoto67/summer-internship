<div class="container">
  <div class="recipe-list">
    <% @recipes.each do |recipe| %>
      <div class="card recipe-card">
        <img class="recipe-img" src="<%= recipe.image_url %>" alt="">
        <div class="card-body">
          <p class="card-title">
            <%= recipe.title %>
          </p>
          <p class="card-text">
            <%= recipe.description %>
          </p>
          <div class="step-short-list list-group list-group-flush">
            <% recipe.steps.first(3).each_with_index do |step, i| %>
              <div class="list-group-item step-item">
                <%= i+1 %>. <%= step.description[0..10] %>...
              </div>
            <% end %>
          </div>
          <div>
            <%= link_to "詳しく見る", recipe_path(recipe), class: "card-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
